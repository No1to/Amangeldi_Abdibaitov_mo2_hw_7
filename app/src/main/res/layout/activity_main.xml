<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/container"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="24dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="88sp" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="6dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_All_Clean"
                style="@style/Gray.Button"
                android:onClick="onNumberClick"
                android:text="AC" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Plus_Or_Minus"
                style="@style/Gray.Button"
                android:layout_marginHorizontal="18dp"
                android:text="±" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Percent"
                style="@style/Gray.Button"
                android:layout_marginEnd="18dp"
                android:text="%" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Divide"
                style="@style/Orange.Button"
                android:onClick="onOperationClick"
                android:text="/" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="6dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Number_Seven"
                style="@style/Dark.Gray.Button"
                android:onClick="onNumberClick"
                android:text="7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Number_Eeight"
                style="@style/Dark.Gray.Button"
                android:layout_marginHorizontal="18dp"
                android:onClick="onNumberClick"
                android:text="8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Number_Nine"
                style="@style/Dark.Gray.Button"
                android:layout_marginEnd="18dp"
                android:onClick="onNumberClick"
                android:text="9" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Multiply"
                style="@style/Orange.Button"
                android:onClick="onOperationClick"
                android:text="x" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="6dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Number_Four"
                style="@style/Dark.Gray.Button"
                android:onClick="onNumberClick"
                android:text="4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Number_Five"
                style="@style/Dark.Gray.Button"
                android:layout_marginHorizontal="18dp"
                android:onClick="onNumberClick"
                android:text="5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Number_Six"
                style="@style/Dark.Gray.Button"
                android:layout_marginEnd="18dp"
                android:onClick="onNumberClick"
                android:text="6" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Minus"
                style="@style/Orange.Button"
                android:onClick="onOperationClick"
                android:text="—" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="6dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Number_One"
                style="@style/Dark.Gray.Button"
                android:onClick="onNumberClick"
                android:text="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Number_Two"
                style="@style/Dark.Gray.Button"
                android:layout_marginHorizontal="18dp"
                android:onClick="onNumberClick"
                android:text="2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Number_Three"
                style="@style/Dark.Gray.Button"
                android:layout_marginEnd="18dp"
                android:onClick="onNumberClick"
                android:text="3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Plus"
                style="@style/Orange.Button"
                android:onClick="onOperationClick"
                android:text="+" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="6dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Number_Zero"
                style="@style/Dark.Gray.Button"
                android:layout_width="178dp"
                android:onClick="onNumberClick"
                android:paddingStart="32dp"
                android:text="0"
                android:textAlignment="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Point"
                style="@style/Dark.Gray.Button"
                android:layout_marginHorizontal="18dp"
                android:onClick="onNumberClick"
                android:text="."
                android:textSize="40sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Button_Equal"
                style="@style/Orange.Button"
                android:onClick="onOperationClick"
                android:text="=" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>